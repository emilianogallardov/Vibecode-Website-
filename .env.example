# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/vibecode?schema=public"

# NextAuth Configuration
AUTH_SECRET="generate-with: openssl rand -base64 32"
AUTH_URL="http://localhost:3000"

# OAuth Providers (Optional - remove if not using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Email Configuration (Resend)
RESEND_API_KEY=re_xxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com
CONTACT_EMAIL=hello@yourdomain.com

# Turnstile Captcha
NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAAxxxxxxxxxx
TURNSTILE_SECRET_KEY=0x4AAAAAAxxxxxxxxxx

# Rate Limiting (Optional - uses in-memory fallback if not set)
UPSTASH_REDIS_REST_URL=https://xxxxxxxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxxxxxxx